{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "question", "choices", "answer", "category", "difficulty", "explanation"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^gym-[0-9]{3}$"
      },
      "question": {
        "type": "string",
        "minLength": 10
      },
      "choices": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 4,
        "maxItems": 4
      },
      "answer": {
        "type": "integer",
        "minimum": 0,
        "maximum": 3
      },
      "category": {
        "type": "string",
        "enum": ["anatomy", "technique", "programming", "nutrition", "injury", "biomechanics"]
      },
      "difficulty": {
        "type": "string",
        "enum": ["easy", "medium", "hard"]
      },
      "explanation": {
        "type": "string",
        "minLength": 20
      }
    }
  }
}

